# Ollama host and port (if using HTTP fallback)
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434

# Embedding and generation model names (installed in Ollama)
EMBED_MODEL=all-minilm
LLM_MODEL=llama3.2

# Vector DB: chroma or faiss
VECTOR_DB=chroma

# Persistence paths
CHROMA_PERSIST_DIR=./chroma_db
FAISS_PERSIST_DIR=./faiss_index

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=150
